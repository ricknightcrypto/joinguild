  "license": "MIT",
  "scripts": {
    "build:dev": "webpack --mode=development --config webpack.config.js",
    "watch": "concurrently --kill-others \"yarn build:dev --watch\"  \"npx tailwindcss -i ./style.css -o ./build-tailwind.css --watch\"",
    "build": "webpack --mode=production --config webpack.config.js",
    "tailwind-build": "npx tailwindcss -i ./style.css -o ./build-tailwind.css --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-loader": "^8.1.0",
    "bable-loader": "^0.0.1-security",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^5.0.1",
    "file-loader": "^6.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^10",
    "style-loader": "^2.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "sass": "^1.66.1"
  }
}
